package EmpManage;

import java.util.Date;

public class ContractedEmp extends Employee{
	private float hrs;
	private double hrs_charge;
	public ContractedEmp() {
		super();
	}
	public ContractedEmp(String pid, String pname, Date bdate, String dept, String desg, float hrs, float hrs_charge) {
		super(pid, pname, bdate, dept, desg);
		this.hrs = hrs;
		this.hrs_charge = hrs_charge;
	}
	public float getHrs() {
		return hrs;
	}
	public void setHrs(float hrs) {
		this.hrs = hrs;
	}
	public double getHrs_charge() {
		return hrs_charge;
	}
	public void setHrs_charge(double sal) {
		this.hrs_charge = sal;
	}
	@Override
	public String toString() {
		return super.toString() + " ContractedEmp [hrs=" + hrs + ", hrs_charge=" + hrs_charge + "]";
	}
	
	
}
