package EmpManage;

//import java.util.Date;
import java.util.Scanner;

public class TestEmployee {

	public static void main(String[] args) 
	{
		// pid,  pname,  bdate,  dept,  desg,  salary
//		SalariedEmp s1 = new SalariedEmp("s1", "abc", new Date(), "IT", "HR", 100000) ;
//		ContractedEmp c1 = new ContractedEmp("c1", "xyz", new Date(2003, 11, 15), "ESE", "HOD", 80, 3000) ;
//		
//		System.out.println(s1);
//		System.out.println(c1);
		
		Scanner sc = new Scanner(System.in);
		int choice = 0;
		int ch = 0;
		
		do {
			System.out.println("\n1. Add new Employee\n2. Display all");
			System.out.println("3. Display by id\n4. change sal or charges");
			System.out.println("5. Display Salaried Employee\n6. Display Contract Employee");
			System.out.println("7. Search By Name\n8. Calculate net salary\n9. exit");
			
			System.out.print("Enter your choice : ");
			choice=sc.nextInt();
			
			switch(choice) {
			
			case 1:
				System.out.print("1. Salaried Employee\n2. Contracted Employee\nEnter your choice : ");
				ch=sc.nextInt();
				EmployeeService.addNewEmployee(ch);
				break;
			
			case 2:
				
				EmployeeService.displayAll();
				break;
			
			case 3:
				System.out.println("Enter ID to Search");
				String id =  sc.next();
				
				Employee e = EmployeeService.findById(id);
				
				if (e != null) {
					System.out.println(e);
				}
				else {
					System.out.println("Not Found");
				}
				
			case 4:
				System.out.println("Enter ID to Edit");
				id =  sc.next();
				
				EmployeeService.updateSalary(id);
				
				break;
			
			case 5:
				
				EmployeeService.displayOnlySalaried();
				
				break;
			
			case 6:
				
				EmployeeService.displayOnlyContracted();
				
				break;
			
			case 7:
				System.out.println("Enter Name to search");
				String name =  sc.next();
				EmployeeService.displayByName(name);
				
				break;
			
			case 10:
				System.out.println("Thank....");
				sc.close();
				break;
				
			default:
				System.out.println("wrong choice");
				break;
			}
			
		} while (choice != 10);

	}

}
